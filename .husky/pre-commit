# Run Rust checks
echo "Running Rust formatting check..."
cargo fmt -- --check
if [ $? -ne 0 ]; then
    echo "Rust formatting check failed. Run 'cargo fmt' to fix."
    exit 1
fi

echo "Running Rust linter..."
cargo clippy -- -D warnings
if [ $? -ne 0 ]; then
    echo "Clippy found issues. Please fix them before committing."
    exit 1
fi
