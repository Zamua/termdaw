    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.51.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "@mishieck/ink-titled-box": "^0.3.0",
    "@xstate/react": "^6.0.0",
    "ink": "^6.6.0",
    "ink-image": "^2.0.0",
    "node-web-audio-api": "^1.0.7",
    "play-sound": "^1.1.6",
